<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario -->
    <record id="view_config_global_form" model="ir.ui.view">
        <field name="name">juan.config.global.form</field>
        <field name="model">juan.config.global</field>
        <field name="arch" type="xml">
            <form string="Configuración de Descuentos">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Control de Descuentos">
                            <field name="descuento_maximo" widget="percentage"/>
                            <field name="email_notificacion" placeholder="ejemplo@empresa.com"/>
                            <field name="descuento_minimo_alerta" widget="percentage"/>
                            <field name="bloquear_exceso"/>
                        </group>
                        <group string="Información">
                            <div colspan="2" class="alert alert-info" role="alert">
                                <p><strong>¿Cómo funciona?</strong></p>
                                <ul>
                                    <li>Si un vendedor intenta poner un descuento mayor al máximo permitido, el sistema lo bloqueará</li>
                                    <li>Puedes desactivar el bloqueo para solo mostrar advertencias</li>
                                    <li>Esta configuración aplica a TODOS los pedidos de venta</li>
                                </ul>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la configuración -->
    <record id="action_config_global" model="ir.actions.act_window">
        <field name="name">Configuración de Descuentos</field>
        <field name="res_model">juan.config.global</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'create': False, 'delete': False}</field>
    </record>
</odoo>
